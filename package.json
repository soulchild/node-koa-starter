{
  "name": "node-koa-starter",
  "version": "0.0.1",
  "description": "Boilerplate for new koa.js projects",
  "main": "app.js",
  "scripts": {
    "start": "node bin/node-koa-starter",
    "test": "NODE_ENV=test mocha --recursive test",
    "dev": "nodemon --ignore test --ignore public bin/node-koa-starter",
    "lint": "eslint --ignore-pattern node_modules --ignore-pattern public/js --ignore-pattern assets ."
  },
  "author": "Tobi Kremer",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.2.1"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.5.0",
    "supertest": "^3.0.0"
  }
}
